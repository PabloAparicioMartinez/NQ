<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nq" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_icon_02"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_02_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NQ"
        tools:targetApi="31" >
        <activity
            android:name=".StartActivity"
            android:exported="true"
            android:theme="@style/NQ.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInActivity"
            android:exported="false"
            android:parentActivityName=".StartActivity"
            android:theme="@style/Theme.NQ.ActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:parentActivityName=".StartActivity"
            android:theme="@style/Theme.NQ.ActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NQ.ActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".DiscoScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.NQ.ActionBar" />
        <activity
            android:name=".EventScreenActivityAvailable"
            android:exported="false"
            android:theme="@style/Theme.NQ.ActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EventScreenActivityNotAvailable"
            android:exported="false"
            android:theme="@style/Theme.NQ.ActionBar" />
    </application>

</manifest>