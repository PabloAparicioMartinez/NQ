<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NQ.Button.Full" parent="Widget.Material3.Button.Icon">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="NQ.Button.Outline" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">6dp</item>
        <item name="strokeColor">@color/dark_blue</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="NQ.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="NQ.Button.PlusMinus" parent="Widget.Material3.Button.Icon">
        <item name="android:background">@color/dark_blue</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:radius">60dp</item>
    </style>

    <style name="NQ.Button.Profile" parent="Widget.Material3.Button.Icon">
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="NQ.Button.Square" parent="Widget.Material3.Button.Icon">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="NQ.Button.Round" parent="Widget.Material3.Button.Icon">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">16dp</item>
    </style>

</resources>