<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NQ" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black_01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_grey_01</item>
        <item name="fontFamily">@font/roboto_regular</item>

        <item name="actionBarStyle">@style/NQ.ActionBar</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="Theme.NQ.Progressbar">
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <style name="Theme.NQ.ProgressbarProfile">
        <item name="colorAccent">@color/black_01</item>
    </style>

    <style name="Theme.NQ.DateNotSelected">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_01</item>
    </style>

    <style name="Theme.NQ.DateSelected">
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NQ.ActionBar" parent="Widget.Material3.ActionBar.Solid">
<!--        <item name="background">@color/light_grey_01</item>-->
        <item name="background">?android:colorBackground</item>
        <item name="titleTextStyle">@style/NQ.ActionBar.TitleTextStyle</item>
    </style>

    <style name="NQ.ActionBar.TitleTextStyle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black_01</item>
    </style>

    <style name="Theme.NQ.NoActionBar" parent="Theme.NQ">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NQ.ActionBar" parent="Theme.NQ">
        <item name="windowActionBar">true</item>
        <item name="iconTint">@color/dark_blue</item>
    </style>

    <style name="BottomNavMenu_MaterialComponents" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">#C0C3C5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/light_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <style name="NQ.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo_05</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.NQ.NoActionBar</item>
    </style>

    <style name="NQ.Toolbar" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_blue</item>
        <item name="colorPrimaryVariant">@color/black_01</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8799BA</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="NQ.ProfileButtonStyle" parent="Theme.NQ">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_button_grey</item>
    </style>

</resources>