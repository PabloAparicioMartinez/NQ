<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/ripple_button_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/itemDiscoInfo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/ic_disco_back_stage" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_border_image"
                android:layout_gravity="center" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/itemDiscoInfo_name"
                style="@style/Theme.NQ.TextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textAlignment="viewStart"
                android:textColor="@color/black_01"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/itemDiscoInfo_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textColor="@color/dark_grey_01"
                android:textSize="12sp"
                android:text="UbicaciÃ³n" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ubication_03"
                    app:tint="@color/dark_grey_01" />

                <TextView
                    android:id="@+id/itemDiscoEvent_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/dark_grey_02"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:text="Distancia" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_music_android"
                    app:tint="@color/dark_grey_01"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/itemDiscoInfo_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reggeaton"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textColor="@color/dark_grey_02"
                    android:textSize="11sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_arrow_android"
            app:tint="@color/mid_blue" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>