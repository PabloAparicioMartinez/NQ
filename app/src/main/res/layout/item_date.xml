<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemDate_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:clickable="true"
    android:foreground="@drawable/ripple_button_date"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:id="@+id/itemDate_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/itemDate_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEMANA"
            android:textSize="11sp"
            android:textColor="@color/black_01"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26sp"
            android:textColor="@color/black_01"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemDate_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MES"
            android:textSize="10sp"
            android:textColor="@color/black_01"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>