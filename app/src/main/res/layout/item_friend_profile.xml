<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ripple_button_grey"
        android:paddingStart="24dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/itemFriend_image"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/png_boy_01" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemFriend_name"
                style="@style/NQ.TextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nombre"
                android:textAllCaps="true"
                android:layout_marginBottom="4dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black_01"
                android:textSize="14sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/itemFriend_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Mail"
                android:textColor="@color/dark_grey_01"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/itemDeleteFriendButton"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/itemFriend_friendsBoolean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitud enviada"
            android:textSize="12dp"
            android:textStyle="italic"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>