<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageViewPagerTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/circleIndicatorQR"
            android:layout_alignParentTop="true" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circleIndicatorQR"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            app:ci_width="6dp"
            app:ci_height="6dp"
            app:ci_drawable="@drawable/shape_circleindicator3"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp" />

        <include layout="@layout/fragment_my_tickets_signed_in_empty_tickets"
            android:id="@+id/emptyTicketsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>